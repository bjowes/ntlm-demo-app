@page
@model AuthModel
@{
    ViewData["Title"] = "Auth";
}

<div class="jumbotron">
    <h1 class="display-4">Authentication</h1>
    <p class="lead">Windows authentication required for access</p>
</div>

@if (@Model.User.Identity.IsAuthenticated)
{
<div class="alert alert-success" role="alert">
    Logged in as: @Model.HttpContext.User.Identity.Name <br />
</div>
}
else
{
<div class="alert alert-warning" role="alert">
    Anonymous access!
</div>
}

